<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:theme="@style/Theme.AirlineTickets"
    android:background="?attr/colorSurface"
    android:orientation="vertical"
    android:paddingEnd="@dimen/larger_pad">

    <androidx.cardview.widget.CardView
        android:layout_width="132dp"
        android:layout_height="132dp"
        app:cardCornerRadius="@dimen/big_pad">
        <ImageView
            android:id="@+id/iv_offer_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@tools:sample/avatars"
            />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_pad"
        tools:text="Die Antwoord"
        android:textSize="8pt"
        android:textColor="?attr/colorOnPrimary"
        android:fontFamily="@font/spf_black"
        />

    <TextView
        android:id="@+id/tv_town"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_pad"
        tools:text="Будапешт"
        android:textSize="7pt"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/spf_medium"
        />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_pad"
            tools:text="от 22 264 р"
            android:drawableStart="@drawable/ic_flight"
            android:textSize="7pt"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/spf_medium"
            />



</LinearLayout>